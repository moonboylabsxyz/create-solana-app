{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["src/**/*", "src/templates/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "copy": ["src/templates/**/*"]
}